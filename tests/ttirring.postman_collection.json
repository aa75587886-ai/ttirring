{
  "info": {
    "name": "Ttirring API Smoke",
    "_postman_id": "ttirring-smoke",
    "description": "P1: 통합 스모크 테스트 (빠른 실행용)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "http://localhost:3000/health", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["health"] }
      },
      "response": []
    },
    {
      "name": "Reservation create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jobId\": \"J-smoke1\",\n  \"channelId\": \"CH-02\",\n  \"passengerName\": \"홍길동\",\n  \"pickupAddr\": \"서울역\",\n  \"dropoffAddr\": \"성남시\"\n}"
        },
        "url": { "raw": "http://localhost:3000/v1/reservations", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["v1","reservations"] }
      },
      "response": []
    },
    {
      "name": "Jobs stats (404)",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/v1/jobs/stats?channelId=CH-404", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["v1","jobs","stats"], "query": [{"key": "channelId","value": "CH-404"}] }
      },
      "response": []
    },
    {
      "name": "Wallet debit idempotent",
      "event": [{
        "listen": "prerequest",
        "script": {
          "exec": [
            "pm.environment.set(\"idemKey\", pm.variables.replaceIn('{{$guid}}'));"
          ],
          "type": "text/javascript"
        }
      }],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "{{idemKey}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"DR-01\",\n  \"amount\": 1000,\n  \"reason\": \"FEE\",\n  \"jobId\": \"J-smoke1\",\n  \"channelId\": \"CH-02\"\n}"
        },
        "url": { "raw": "http://localhost:3000/v1/wallet_tx/debit", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["v1","wallet_tx","debit"] }
      },
      "response": []
    }
  ]
}
