generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Channel {
  channel_id String  @id
  jobs       Job[]
  settlements Settlement[]
}

model User {
  user_id String @id
  role    String @default("driver")
  walletTx WalletTx[]
}

model Job {
  job_id     String   @id
  channel_id String
  driver_id  String?
  status     String
  updated_at DateTime @default(now())

  channel Channel @relation(fields: [channel_id], references: [channel_id])
}

model Settlement {
  settle_id     Int      @id @default(autoincrement())
  job_id        String   @unique
  channel_id    String
  driver_id     String
  amount        Int
  driver_payout Int
  platform_fee  Int
  settled_at    DateTime @default(now())
  meta          Json?

  channel Channel @relation(fields: [channel_id], references: [channel_id])
}

model WalletTx {
  tx_id      Int      @id @default(autoincrement())
  user_id    String
  type       String
  amount     Int
  reason     String
  job_id     String?
  channel_id String?
  created_at DateTime @default(now())
  meta       Json?

  user User @relation(fields: [user_id], references: [user_id])
}

