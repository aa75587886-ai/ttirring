generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid())
  balance Int
  jobs    Job[]
}

model Job {
  id        String  @id @default(cuid())
  channelId String
  status    String
  user      User?   @relation(fields: [userId], references: [id])
  userId    String?
}

model WalletTx {
  txId      String @id
  userId    String
  amount    Int
  reason    String
  jobId     String
  channelId String
  type      String
}
